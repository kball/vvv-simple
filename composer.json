{
    "name"        : "kiriaze/vvv-simple",

    "description" : "VVV Auto Site: WordPress stack via Composer",

    "authors"     : [
        {
            "name"                              : "Constantine Kiriaze",
            "email"                             : "hello@kiriaze.com",
            "homepage"                          : "http://kiriaze.com/"
        }
    ],

    "type"        : "project",

    "minimum-stability": "dev",

    "require"     : {
        "wordpress"                          	: "3.8",
        "wpackagist/advanced-custom-fields"     : "*",
        "wpackagist/user-switching"             : "*",
        "wpackagist/wp-super-cache"             : "*",
        "simple-framework"                      : "*",
        "simple-shortcodes"                     : "*"
    },

    "require-dev" : {
        "wpackagist/log-deprecated-notices"     : "*",
        "wpackagist/core-control"               : "*",
        "wpackagist/monster-widget"             : "*",
        "wpackagist/regenerate-thumbnails"      : "*",
        "wpackagist/theme-check"                : "*",
        "wpackagist/toolbar-theme-switcher"     : "*",
        "wpackagist/user-switching"             : "*",
        "wpackagist/wcm-user-language-switcher" : "*"
    },

    "extra"       : {
        "webroot-dir": "wp",
        "webroot-package": "wordpress"
    },

    "config"      : {
        "vendor-dir"							:  "wp-content/vendor"
    },

    "repositories": [
        {
            "type"                              : "composer",
            "url"                               : "http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "type": "webroot",
                "name": "wordpress",
                "version": "3.8.0",
                "dist": {
                    "url": "https://github.com/WordPress/WordPress/archive/3.8.zip",
                    "type": "zip"
                },
                "require": {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        },
        {
            "type"                              : "package",
            "package": {
                "name": "simple-framework",
                "version": "dev-master",
                "type": "wordpress-theme",
                "source": {
                    "url": "git://github.com/kiriaze/simple-framework.git",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        {
            "type"                              : "package",
            "package": {
                "name": "simple-shortcodes",
                "type": "wordpress-plugin",
                "version": "dev-master",
                "source": {
                    "url": "git://github.com/kiriaze/simple-shortcodes.git",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        }
    ]
}